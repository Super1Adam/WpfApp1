                            <DataGridTextColumn Header="发动机转速" Binding="{Binding SaleCount}" />
                            <DataGridTextColumn Header="异常信息" Binding="{Binding SaleAmount}" />
                        </DataGrid.Columns>
                    </DataGrid>


                </GroupBox>
            </UniformGrid>
            <Grid Grid.Column="1" Margin="0,40,0,10">
