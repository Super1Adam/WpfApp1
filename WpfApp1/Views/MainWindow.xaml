                            <TextBlock Text="无功功率" Foreground="#44FFFFFF" FontSize="9"
VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" DisableAnimations="True">
                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries  Values="{Binding ScadaData}" LineSmoothness=" 0" Stroke="#2BB6FE" Fill="Transparent"/>
