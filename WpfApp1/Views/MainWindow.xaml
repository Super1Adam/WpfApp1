                                <lvc:LineSeries  Values="{Binding ScadaDatb}" LineSmoothness=" 0" Stroke="IndianRed" Fill="Transparent"/>
                                <lvc:LineSeries  Values="{Binding ScadaDatc}" LineSmoothness=" 0" Stroke="AliceBlue" Fill="Transparent"/>
                                <lvc:LineSeries  Values="{Binding ScadaDatd}" LineSmoothness=" 0" Stroke="DarkOliveGreen" Fill="Transparent"/>
