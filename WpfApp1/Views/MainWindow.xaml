                        <DataGrid.Columns >
                            <!--<DataGridTemplateColumn Header="风机编号" Width="60" CanUserSort="False" 绑定模板>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding Ranking,Converter={StaticResource RankingBackroundConverter}}" Padding="5 0">
