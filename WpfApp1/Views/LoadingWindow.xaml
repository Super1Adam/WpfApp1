<Window x:Class="WpfApp1.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="正在读取" Height="150" Width="300" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Background="White" AllowsTransparency="True">
    <Grid>
        <TextBlock Text="正在读取文件，请稍候..." 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                   FontSize="16" FontWeight="Bold"/>
        <ProgressBar IsIndeterminate="True" Height="20" 
                     VerticalAlignment="Center" Margin="20"/>
    </Grid>
</Window>
